{{#each posts as |post| }}
<div class="blog-post">
    <header class="d-flex justify-content-between align-items-center py-3 px-4 bg-primary">
        <div class="header-left d-flex align-items-center">
            <h1>{{ post.name }}</h1>
        </div>
        <div class="header-right d-flex align-items-center">
            <p>Posted by X on {{format_date post.date_created}}</p>
        </div>
    </header>
    <article>
        <p>{{ post.description }}</p>
