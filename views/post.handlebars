        <button class="comment-button" id="{{ post.name }}">Leave a Comment &#x1F4AC;</button>
    </div>

    
</div>

<form id="formId">
    <div class="comment-area" id="commentArea" style="display:none">
        <textarea rows="4" id="textArea" cols="50" name="content" placeholder="Write your comment here..."></textarea>
        <button id="submitButton" class="submit-comment">Submit Comment</button>
    </div>
</form>

    {{#each comments as |comment| }}



