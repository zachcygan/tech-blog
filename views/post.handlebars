<div class="card mt-3 h1">
  <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
    <h5 class="card-title mb-0">{{ post.name }}</h5>
    <small class="text-white">Posted by {{ post.user.name }} on {{format_date post.date_created}}</small>
  </div>
  <div class="card-body bg-light rounded-bottom">
    <p class="card-text">{{ post.description }}</p>
    <div class="d-flex justify-content-end">
      {{#if (equal post.user_id currentUser.id )}}
      <button class="btn btn-success commentButton me-2" id="{{ post.id }}">UPDATE</button>
      <button class="btn btn-danger commentButton me-2" id="{{ post.id }}">DELETE</button>
      <button class="btn btn-primary commentButton" id="{{ post.id }}">Leave a Comment &#x1F4AC;</button>
      {{else}}
      <button class="btn btn-primary commentButton" id="{{ post.id }}">Leave a Comment &#x1F4AC;</button>
      {{/if}}
    </div>
  </div>
</div>


<div class="card mt-3 comment-area" style="display:none" id="commentArea">
  <div class="card-header bg-primary text-white">
    Leave a Comment
  </div>
  <div class="card-body">
    <form id="formId">
      <div class="form-group">
        <textarea class="form-control" id="textArea" rows="4" name="content"
          placeholder="Write your comment here..."></textarea>
      </div>
      <button class="btn btn-primary mt-2" id="submitButton" type="submit">Submit Comment</button>
    </form>
  </div>
</div>

{{#each comments as |comment| }}

<div class="d-flex just-content-center">
  <div class="card mt-3 col-8">
    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
      <h5 class="card-title mb-0">{{ comment.user.name }} commented,</h5>
      <small class="text-white">{{format_date comment.date_created}}</small>
    </div>
    <div class="card-body bg-light rounded-bottom">
      <p class="card-text">{{ comment.content }}</p>
    </div>
  </div>
</div>

{{/each}}